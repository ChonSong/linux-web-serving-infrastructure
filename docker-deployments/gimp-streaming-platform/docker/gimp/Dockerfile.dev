FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive
ENV DISPLAY=:1
ENV VNC_RESOLUTION=1280x720
ENV VNC_PASSWORD=vncpassword

# Install dependencies
RUN apt-get update && apt-get install -y \
    gimp \
    tigervnc-standalone-server \
    xfce4 \
    xfce4-goodies \
    supervisor \
    net-tools \
    dbus-x11 \
    x11-utils \
    && rm -rf /var/lib/apt/lists/*

# Create user
RUN useradd -m -s /bin/bash gimp && \
    mkdir -p /home/gimp/.vnc && \
    chown -R gimp:gimp /home/gimp

# Supervisor configuration
COPY docker/gimp/supervisord.conf /etc/supervisor/conf.d/supervisord.conf

# Entrypoint
COPY docker/gimp/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

USER gimp
WORKDIR /home/gimp

EXPOSE 5901

CMD ["/entrypoint.sh"]
